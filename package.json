{
    "name": "tree-core-ide",
    "displayName": "TreeCore IDE",
    "description": "The next generation integrated development environment for processor.",
    "version": "1.0.0",
    "icon": "./resources/logos/treecore_logo_200x200.png",
    "engines": {
        "vscode": "^1.42.0"
    },
    "categories": [
        "Programming Languages",
        "Snippets",
        "Formatters",
        "Linters"
    ],
    "keywords": [
        "cpu",
        "verilog",
        "vhdl",
        "fpga",
        ""
    ],
    "publisher": "microdynamics",
    "homepage": "",
    "license": "GPL-3.0",
    "repository": {
        "type": "git",
        "url": "https://github.com/microdynamics-cpu/tree-core-ide"
    },
    "bugs": {
        "url": "https://github.com/microdynamics-cpu/tree-core-ide/issues",
        "email": "microdynamics@126.com"
    },
    "author": {
        "name": "myyerrol",
        "email": "myyerrol@126.com",
        "url": "https://myyerrol.io"
    },
    "main": "./src/extension.js",
    "activationEvents": [
        "*"
    ],
    "contributes": {
        "commands": [{
            "command": "tree-core-ide.helloWorld",
            "title": "Hello World"
        }],
        // "menus": {

        // },
        "viewsContainers": {
            "activitybar": [{
                "id": "treecore",
                "title": "TreeCore",
                "icon": "./resources/logos/treecore_logo_activity.svg"
            }]
        },
        "views": {
            "treecore": [{
                "id": "treecore.activityBar.projectTasks",
                "name": "Project Tasks"
            }, {
                "id": "treecore.activityBar.quickAccess",
                "name": "Quick Access"
            }]
        },
        "configuration":[{
            "type": "object",
            "title": "TreeCore IDE Configuration",
            "properties": {
                "treecore.config.showHomePageAtStartup": {
                    "type": "boolean",
                    "default": true,
                    "description": "Show TreeCore Home page at startup."
                },
                "treecore.config.switchIDELanguage": {
                    "type": "string",
                    "enum": [
                        "English",
                        "中文"
                    ],
                    "default": "English",
                    "description": "Switch TreeCore IDE language."
                }
            }
        }]
    },
    "scripts": {
        "lint": "eslint .",
        "pretest": "npm run lint",
        "test": "node ./test/runTest.js"
    },
    "devDependencies": {
        "@types/vscode": "^1.42.0",
        "@types/glob": "^7.1.3",
        "@types/mocha": "^8.0.4",
        "@types/node": "^12.11.7",
        "eslint": "^7.19.0",
        "glob": "^7.1.6",
        "mocha": "^8.2.1",
        "typescript": "^4.1.3",
        "vscode-test": "^1.5.0"
    }
}
